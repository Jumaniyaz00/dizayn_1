<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <TextView
            android:textColor="@android:color/background_dark"
            android:id="@+id/lhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LHD"
            android:textSize="50sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="550dp"
            />

    <TextView
        android:textColor="@android:color/background_dark"

        android:id="@+id/jfk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JFK"
        android:textSize="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="550dp"
        />

    <ImageView
        android:id="@+id/air1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_airplanemode_active_black_24dp"
      app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="550dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/lhd"
        app:layout_constraintLeft_toLeftOf="@+id/lhd"
        app:layout_constraintRight_toRightOf="@+id/lhd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW YORK"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/jfk"
        app:layout_constraintLeft_toLeftOf="@+id/jfk"
        app:layout_constraintRight_toRightOf="@+id/jfk"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                      22 nd SEPTEMBER 2020"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="250dp"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------------------"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/air1"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------------------------------------------------------------------------"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/shtrifkod"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="200dp"
        />
1111

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----------------------"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/air1"
        app:layout_constraintBottom_toBottomOf="@+id/shtrifkod"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAMIE SYKE"
        android:textColor="@android:color/background_dark"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLIGHT"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEAT"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VA301"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/light"
        app:layout_constraintLeft_toLeftOf="@+id/light"
        app:layout_constraintRight_toRightOf="@+id/light"
        android:textSize="40dp"
        android:textColor="@android:color/background_dark"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21A"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/seat"
        app:layout_constraintLeft_toLeftOf="@+id/seat"
        app:layout_constraintRight_toRightOf="@+id/seat"
        android:textSize="40dp"
        android:textColor="@android:color/background_dark"

        />


        <ImageView
            android:id="@+id/shtrifkod"
            android:layout_width="1000dp"
            android:layout_height="100dp"
            android:src="@drawable/shtrifkod"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    <TextView
        android:id="@+id/departs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPARTS"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:id="@+id/arrivest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrives"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:id="@+id/departs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:40"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/departs"
        app:layout_constraintLeft_toLeftOf="@+id/departs"
        app:layout_constraintRight_toRightOf="@+id/departs"
        android:textSize="40dp"
        android:textColor="@android:color/background_dark"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:01"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/arrivest"
        app:layout_constraintLeft_toLeftOf="@+id/arrivest"
        app:layout_constraintRight_toRightOf="@+id/arrivest"
        android:textSize="40dp"
        android:textColor="@android:color/background_dark"/>


</androidx.constraintlayout.widget.ConstraintLayout>